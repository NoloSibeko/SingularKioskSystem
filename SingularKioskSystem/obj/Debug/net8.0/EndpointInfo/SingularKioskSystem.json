        "required": [
          "contactNumber",
          "email",
          "name",
          "password",
          "surname"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "surname": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "pattern": "^[^@\\s]+@singular\\.co\\.za$",
            "type": "string",
            "format": "email"
          },
          "contactNumber": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 8,
            "pattern": "^(?=.*\\d)(?=.*[^\\da-zA-Z]).{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
